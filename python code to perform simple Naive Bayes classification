import numpy as np
import matplotlib as mplt import pandas as pd

import numpy as np import pandas as pd
import matplotlib.pyplot as plt

from sklearn.datasets import load_iris iris = load_iris(as_frame=True)
# df = pd.DataFrame(iris.data, columns=iris.feature_names) 
# print(iris.head())
from sklearn.model_selection import train_test_split
train_x, test_x, train_y, test_y = train_test_split(iris.data, iris.target, test_size=0.19, random_state=69)

from sklearn.naive_bayes import GaussianNB model = GaussianNB()
model.fit(train_x, train_y)

print("R-squared: ", model.score(test_x, test_y)) 
pred = model.predict(test_x)
fig, ax = plt.subplots(2, 2, figsize=(15, 12)) 
plt.title('flower classification')
ax[0][0].scatter(test_x["sepal length (cm)"], pred, c=test_y, cmap="Paired") 
ax[0][0].title.set_text("sepal length (cm) vs pred") 
ax[0][1].scatter(test_x["sepal width (cm)"], pred, c=test_y, cmap="Paired") 
ax[0][1].title.set_text("sepal width (cm) vs pred") 
ax[1][0].scatter(test_x["petal length (cm)"], pred, c=test_y, cmap="Paired") 
ax[1][0].title.set_text("petal length (cm) vs pred")
plt.show()
 

 
